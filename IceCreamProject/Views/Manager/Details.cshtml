@model IceCreamProject.Models.IcecreamTaste

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout3.cshtml";

    string imglocation = Model.ImgLocation;

    double theprice = (double)ViewData["Message"];

    <!-- my styles for this template -->
    <link href="~/css/mystyle.css" rel="stylesheet" />
}

<div class="heading_container heading_center ">
    <h1>Icecream Details</h1>
    <h4>
        @Html.DisplayFor(model => model.Name)
    </h4>
</div>

<section class="contact_section">

    <div class="container" style="background-color:white">

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <p></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <div class="form_container pr-md-3">
                    <div class="box">
                        <div class="img-box">
                            <img src="@Url.Content(imglocation)" width="300" height="230" />
                        </div>
                        <div class="detail-box">
                            <h3>
                                @Html.DisplayFor(model => model.Description)
                            </h3>
                        </div>
                    </div>
 
                    <div>
                        <a asp-controller="Manager" asp-action="Menu">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/images/icecreams/top-image-02 (5).jpg" class="box_img" alt="prices table img" width="500" height="400" />
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <p></p>
            </div>
        </div>
    </div>
</section>
