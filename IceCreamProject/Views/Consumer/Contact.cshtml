@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="heading_container heading_center ">
    <h1>Contact us</h1>
    <h4>Be in touch with our company</h4>
</div>

<!-- contact section -->
<section class="contact_section" >

    <div class="container" style="background-color:white">

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <p></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <div class="form_container pr-md-3">
                    <form action="mailto:estizeiger@gmail.com" method="post" enctype="text/plain">
                        <div>
                            <input type="text" placeholder="Your Name" />
                        </div>
                        <div>
                            <input type="text" placeholder="Phone Number" />
                        </div>
                        <div>
                            <input type="email" placeholder="Your Email" />
                        </div>
                        <div>
                            <input type="text" class="message-box" placeholder="Message" />
                        </div>
                        <button>
                            SEND
                        </button>

                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="pl-md-3">
                    <div class="map_container ">
                        <div id="googleMap">
                            <script>
                                function myMap() {
                                    var mapProp = {
                                        center: new google.maps.LatLng(34.856136, 34.721794),
                                        zoom: 5,
                                    };
                                    var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
                                }
                            </script>

                            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgHkSOJXcXH_N6iaFzJj8i8zpTO9W2p_Y&callback=myMap"></script>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="background-color: lightblue">
                <p></p>
            </div>
        </div>
    </div>
</section>
<!-- end contact section -->
